<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Lista de Tareas</title>
    <style>
        .container-box {
            margin: 50px 300px 50px 300px; 
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <div class="container-box">
            <h1>Lista de Tareas</h1>

            <form action="/agregar-tarea" method="POST">
                <div class="col-auto">
                    <input type="text" style="margin-bottom: 10px;" class="form-control" name="tarea" id="add-tarea" placeholder="Ingrese una tarea" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Agregar tarea</button>
                </div>
            </form>
    
            <h2>Tareas por hacer</h2>
            <form action="/mover-a-realizadas" method="POST">
                <ul  class="text-center">
                    <% tareasPorHacer.forEach(function(tarea, index) { %>
                        <li class="list-group-item "> <%= tarea %>
                            <input class="form-check-input" type="checkbox" name="tareasMarcadas"  value="<%= index %>" id="flexCheckDefault">
                        </li>
                    <% }); %>
                 </ul>
                 <button type="submit" class="btn btn-success mb-3">Realizar tareas</button>
            </form>
    
            <h2>Tareas realizadas</h2>
            <form action="/eliminar-todas-realizadas" method="POST">
                <ul class="list-group list-group-flush">
                    <% tareasRealizadas.forEach(function(tarea, index) { %>
                        <li class="list-group-item"><%= tarea %></li>
                    <% }); %>
                </ul>
                <button type="submit" class="btn btn-danger">Eliminar tareas</button>
            </form>
            
                <h2 style="background-color:rgb(226, 215, 0); margin: 15px; color: black;"> <%= alerta %> </h2>

        </div>
    </div>
</body>
</html>

